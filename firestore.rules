rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DANGER: This allows anyone to read and write to all collections.
    // This is for prototype purposes ONLY, as user authentication is simulated.
    // In a real application, you MUST secure your data with proper rules,
    // for example: `allow read, write: if request.auth != null;`
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção 'branches'
    match /branches/{branchId} {
      // Leitura e escrita abertas para fins de desenvolvimento.
      // TODO: Restringir escrita para usuários autenticados (admins).
      allow read, write: if true;
    }

    // Regras para a coleção 'instructors'
    match /instructors/{instructorId} {
      // Leitura e escrita abertas para fins de desenvolvimento.
      // TODO: Restringir escrita para usuários autenticados (admins).
      allow read, write: if true;
    }

    // Regras para a coleção 'termsAcceptances'
    match /termsAcceptances/{acceptanceId} {
      // Leitura e escrita abertas para fins de desenvolvimento.
      // TODO: Restringir escrita para usuários autenticados.
      allow read, write: if true;
    }
  }
}

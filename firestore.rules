rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Regra permissiva para desenvolvimento.
    // Permite que qualquer pessoa leia e escreva em todo o banco de dados.
    // Isto DEVE ser alterado para regras de segurança granulares antes da produção.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

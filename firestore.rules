
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Esta regra permite que qualquer pessoa leia e escreva no seu banco de dados.
    // É uma medida temporária para diagnóstico e desenvolvimento.
    // Devemos criar regras seguras antes de ir para produção.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

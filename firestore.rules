
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral: Permite leitura e escrita para qualquer usuário autenticado.
    // Isso é ótimo para desenvolvimento, mas para produção, você deve
    // definir regras mais específicas por coleção para garantir a segurança.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em todos os documentos para a fase de prototipagem.
    // ATENÇÃO: Em produção, estas regras devem ser mais restritivas.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

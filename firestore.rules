rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Branches are public for reading (e.g., on signup page)
    // but can only be changed by authenticated users (admins in the app).
    match /branches/{branchId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Instructors are public for reading (e.g., on signup page)
    // but can only be changed by authenticated users (admins in the app).
    match /instructors/{instructorId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Terms can be created by anyone during signup.
    // Only authenticated users (admins/profs) can view them later.
    match /termsAcceptances/{acceptanceId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}

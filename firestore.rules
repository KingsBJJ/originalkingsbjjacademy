
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Para a fase de prototipagem, permitir leitura e escrita em todos os documentos
    // para garantir que a funcionalidade de salvamento funcione sem a necessidade de
    // configurar a autenticação completa do usuário ainda.
    // ATENÇÃO: Estas regras são inseguras para um ambiente de produção.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra permissiva para o protótipo.
    // Permite que qualquer cliente leia e escreva em qualquer coleção.
    // ATENÇÃO: Em uma aplicação de produção, as regras devem ser
    // mais restritivas para garantir a segurança dos dados.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

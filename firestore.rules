
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Para a fase de prototipagem, permitir leitura e escrita em todos os documentos.
    // ATENÇÃO: Essas regras não são seguras para produção e devem ser
    // refinadas com autenticação antes do lançamento.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

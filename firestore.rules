
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At a minimum, you should update this
    // rule to restrict access only to authenticated users. After you've built
    // your production app, review Public access securing rules for more info.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

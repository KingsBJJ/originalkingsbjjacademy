rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the 'branches' and 'instructors' collections
    // for any authenticated user. In a real app, you'd restrict this further.
    match /branches/{branchId} {
      allow read, write: if true; // Using `if true` for now for ease of testing
    }

    match /instructors/{instructorId} {
      allow read, write: if true; // Using `if true` for now for ease of testing
    }
  }
}
